<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/catImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:padding="0.75dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/catImg"
                android:text="item name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorMenu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Spinner
                    android:id="@+id/spinnerQuantityOnCart"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="109dp"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/spinnerUnitsOnCart"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="151dp"
                    android:layout_height="47dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkboxOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:gravity="right" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/catImg"
                android:layout_alignParentEnd="true"
                android:text="Delete"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>