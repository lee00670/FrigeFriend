<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jlee.frigefriend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"> -->

        <activity android:name="com.example.jlee.frigefriend.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.jlee.frigefriend.SignupActivity" />
        <activity android:name="com.example.jlee.frigefriend.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.jlee.frigefriend.ViewCart"
            android:parentActivityName="com.example.jlee.frigefriend.MainActivity"></activity>

        <activity android:name="com.example.jlee.frigefriend.ProductInfo"
            android:parentActivityName="com.example.jlee.frigefriend.MainActivity"></activity>


    </application>

</manifest>